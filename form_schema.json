{
    "type": "object",
    "required": [
        "title",
        "questions"
    ],
    "properties": {
        "title": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "successPage": {
            "type": "object",
            "properties": {
                "title": {
                    "type": "string",
                    "description": "Custom success page title (supports markdown)"
                },
                "message": {
                    "type": "string",
                    "description": "Custom success page message (supports markdown)"
                },
                "showIcon": {
                    "type": "boolean",
                    "description": "Whether to show the checkmark icon (default: true)"
                },
                "iconColor": {
                    "type": "string",
                    "description": "Icon color (default: green)"
                }
            }
        },
        "questions": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "id",
                    "type",
                    "label"
                ],
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "type": {
                        "type": "string",
                        "enum": [
                            "text",
                            "choices",
                            "rating",
                            "email",
                            "phone",
                            "date",
                            "file"
                        ]
                    },
                    "label": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "required": {
                        "type": "boolean"
                    },
                    "placeholder": {
                        "type": "string"
                    },
                    "options": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "multiple": {
                        "type": "boolean"
                    },
                    "multiline": {
                        "type": "boolean"
                    },
                    "maxRating": {
                        "type": "integer"
                    },
                    "accept": {
                        "type": "string"
                    },
                    "maxSize": {
                        "type": "integer"
                    }
                }
            }
        }
    }
}